    <div class="d-flex justify-content-end align-items-start mt-5">
        <a href="{{ path('question_add') }}" class="btn btn-secondary mb-2 ">Posez une question</a>
    </div>

    {% for question in questions %}
        <div class="container-fluid mt-100">
            <div class="row">
