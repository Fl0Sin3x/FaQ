{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <br> <br> <br>
    <div class="card">
        <div class="alert alert-success">
            <h3 style="text-align: center">{{ question.titles }}</h3>
        </div>
        <p>{{ question.content }}</p>
    </div>
    <div class="px-4 pt-3">
        <button type="button" class="btn btn-secondary"><i class="ion ion-md-create"></i>&nbsp;
            Reply
        </button>
    </div>
    <h2 class="mb-3">{{ question.answers|length }} Réponse(s)</h2>
    <div class="alert alert-secondary">
        <h4 class="alert-heading text-center">
            <div class="row align-items-center">
                <div class="col">
                    Réponse à cette question
                    {% for answer in question.answers %}
                        <div class="answer">
                            <p>{{ answer.content }}</p>
                            <p>Posté par {{ answer.user.username }} le {{ answer.createdAt|date('d/m/Y H:i:s') }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </h4>
    </div>

{% endblock %}
